# API Settings
# Секретный ключ для API (используется для JWT токенов)
SECRET_KEY=your-secret-key-change-in-production

# Storage Settings
# Установите true для использования Supabase, false для локального хранения
USE_CLOUD_STORAGE=false

# Supabase Settings (Для развертывания в PROD на Vercel)
# URL вашего проекта Supabase (находится в Project Settings > API)
SUPABASE_URL=https://your-project-id.supabase.co
# Публичный ключ API (anon/public key из Project Settings > API)
SUPABASE_KEY=your-supabase-key
# Имя бакета для хранения файлов
SUPABASE_BUCKET=price-manager
# Папка в бакете для организации файлов
SUPABASE_FOLDER=uploads

# Database Settings (локальное окружение)
# Строка подключения к базе данных (по умолчанию SQLite)
DATABASE_URL=sqlite:///./app.db 