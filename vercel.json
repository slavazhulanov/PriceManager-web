{
  "version": 2,
  "builds": [
    {
      "src": "backend/vercel_handler.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/v1/health",
      "dest": "backend/vercel_handler.py",
      "headers": {
        "Cache-Control": "no-cache"
      }
    },
    {
      "src": "/api/v1/files/(.*)",
      "dest": "backend/vercel_handler.py",
      "headers": {
        "Cache-Control": "s-maxage=300, stale-while-revalidate=60"
      }
    },
    {
      "src": "/api/v1/comparison/(.*)",
      "dest": "backend/vercel_handler.py",
      "headers": {
        "Cache-Control": "no-cache"
      }
    },
    {
      "src": "/api(.*)",
      "dest": "backend/vercel_handler.py",
      "headers": {
        "Cache-Control": "s-maxage=60, stale-while-revalidate=30"
      }
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|ico|svg)$)",
      "dest": "frontend/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1",
      "headers": {
        "Cache-Control": "public, max-age=3600"
      }
    }
  ],
  "functions": {
    "backend/vercel_handler.py": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
} 