{
  "version": 2,
  "builds": [
    {
      "src": "backend/vercel_handler.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "buildCommand": "cd frontend && npm install && npm run build:vercel"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/v1/(.*)",
      "dest": "backend/vercel_handler.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "backend/vercel_handler.py"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "backend/vercel_handler.py"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ]
} 