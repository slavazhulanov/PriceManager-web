{
  "version": 2,
  "builds": [
    {
      "src": "backend/index.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9",
        "requirementsPath": "backend/vercel_requirements.txt"
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "backend/index.py"
    },
    {
      "src": "/api(.*)",
      "dest": "backend/index.py"
    },
    {
      "src": "/static/(.*)",
      "dest": "frontend/build/static/$1"
    },
    {
      "src": "/manifest.json",
      "dest": "frontend/build/manifest.json"
    },
    {
      "src": "/favicon.ico",
      "dest": "frontend/build/favicon.ico"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/build/index.html",
      "status": 200
    }
  ]
} 