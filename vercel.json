{
  "version": 2,
  "builds": [
    {
      "src": "backend/vercel_handler.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api(.*)",
      "dest": "backend/vercel_handler.py",
      "headers": {
        "Cache-Control": "s-maxage=600, stale-while-revalidate=60"
      }
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1",
      "headers": {
        "Cache-Control": "public, max-age=3600, immutable"
      }
    }
  ],
  "functions": {
    "backend/vercel_handler.py": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
} 